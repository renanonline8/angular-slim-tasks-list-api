{
    "name": "renanonline8/angular-slim-tasks-list",
    "description": "API para lista de tarefas simples para estudo do angular",
    "keywords": ["task", "list", "api"],
    "homepage": "https://github.com/renanonline8/angular-slim-tasks-list-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Renan Santos Gomes",
            "email": "renanonline8@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^3.1",
        "php-activerecord/php-activerecord": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\" : "src/app/",
            "Utils\\" : "src/utils/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
